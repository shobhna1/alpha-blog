<div class="container" id="">
  <div class="row text-center justify-content-center">
    <div class="col-10">
      <%= render "shared/errors" %>
      <%= form_with(model: @article, class: "shadow p-3 mb-5 bg-primary rounded", local: true) do |f| %>

        <div class="form-group row mt-4">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of the Article" %>
          </div>
        </div>

        <div class="form-group row mt-4">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of the Article" %>
          </div>
        </div>

        <div class="form-group row mt-4">
          <div class="col-10 offset-md-1">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
          </div>
        </div>

      <% end %>
      <div class="mb-5">
      <%= link_to '[ Cancel and Return to Articles Listing ]', articles_path, class: "text-primary" %>
    </div>
    </div>
  </div>
</div>

