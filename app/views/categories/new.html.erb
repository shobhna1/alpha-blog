<h1 class="text-center mt-4">Sign up for AlphaBlog</h1>

<div class="container" id="">
  <div class="row text-center justify-content-center">
    <div class="col-10">
      <%= render "shared/errors", obj: @category %>
      <%= form_with(model: @category, class: "shadow p-3 mb-5 bg-primary rounded", local: true) do |f| %>

        <div class="form-group row mt-4">
          <%= f.label :name, "Category Name", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter name" %>
          </div>
        </div>

        
        <div class="form-group row mt-4">
          <div class="col-10 offset-md-1">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
          </div>
        </div>

      <% end %>
      <div class="mb-5">
      <%= link_to '[ Cancel and Return to Articles Listing ]', articles_path, class: "text-primary" %>
    </div>
    </div>
  </div>
</div>