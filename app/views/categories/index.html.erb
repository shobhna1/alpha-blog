<h1 class="text-center mt-4">Categories</h1>
<%= will_paginate @categories, class: "flickr_pagination" %>

<div class="container">
  <% @categories.each do |item| %>
    <div class="row justify-content-md-center">
      <div class="col-4 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded">         
          <div class="card-body">
            <h5 class="card-title">
            <%= link_to item.name, category_path(item), class: "text-success" %>
            </h5>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(item.created_at) %> ago,
                  Edited <%= time_ago_in_words(item.updated_at) %> ago </small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<%= will_paginate @categories, class: "flickr_pagination" %>
